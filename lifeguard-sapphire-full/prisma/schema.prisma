generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id        String   @id @default(cuid())
  guildId   String   @unique
  prefix    String?  @default("!")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  shortcuts Shortcut[]
}

model User {
  id        String   @id @default(cuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  punishments Punishment[]
}

model Punishment {
  id         String   @id @default(cuid())
  type       PunishmentType
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  guildId    String?
  moderator  String
  reason     String?
  expiresAt  DateTime?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
}

enum PunishmentType {
  WARN
  MUTE
  TEMP_MUTE
  BAN
  KICK
  NOTE
}

model Shortcut {
  id        String   @id @default(cuid())
  guildId   String
  name      String
  command   String
  args      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
